{
  "name": "gcal-simplified",
  "private": true,
  "version": "0.0.7",
  "description": "A simplified Google Calendar desktop application with weather integration.",
  "repository": {
    "type": "git",
    "url": "https://github.com/natanbr/gcal-simplified.git"
  },
  "author": "Simplified Team",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "tsc": "tsc",
    "build": "tsc && vite build && electron-builder",
    "version-tag": "npm version patch && git push origin main --follow-tags",
    "release": "npm run version-tag && tsc && vite build && electron-builder --publish always",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test:clean": "node scripts/clean-tests.js",
    "test:run": "npx playwright test",
    "test:unit": "vitest run",
    "test": "npm run test:clean && npm run test:unit && npm run test:run",
    "test:ui": "npx playwright test --ui",
    "test:debug": "npx playwright test --debug",
    "test:headed": "npx playwright test --headed"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.7.3",
    "framer-motion": "^12.29.2",
    "googleapis": "^171.0.0",
    "lucide-react": "^0.563.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.24",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^28.0.0",
    "playwright": "^1.58.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^4.0.18"
  },
  "main": "dist-electron/main.js"
}
